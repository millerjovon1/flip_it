<div class="text-center p-5">
  <h1><%= @crate.name %></h1>
  <div class="d-flex justify-content-around">
    <%= link_to user_path(current_user) do %>
      <i class="fas fa-arrow-left go-back-button"></i>
    <% end %>
    <p class="mt-3"><%= pluralize(@crate.crate_songs.count, 'song') %></p>
    <%= link_to songs_path do %>
      <i class="fa-solid fa-circle-plus add-music" style="color: #ffffff;"></i>
    <% end %>
  </div>
</div>
<div class="d-flex flex-column align-items-center">
  <% @crate.crate_songs.each do |crate_song| %>
    <%= render 'songs/card', song: crate_song.song, crate_song: crate_song  %>
  <% end %>
</div>
