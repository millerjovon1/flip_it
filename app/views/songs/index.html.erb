<div class="container">
  <div class="row justify-content-center">
    <%# <div class="col col-sm-12 col-md-12"> %>
    <h1 class="text-center my-4">Community Crates</h1>
    <div class="row">
      <div class="col-12 col-lg-6">
        <h3>Original Works</h3>
        <% @originals.each do |song| %>
          <%= render 'songs/card', song: song  %>
        <% end %>
      </div>
      <div class="col-12 col-lg-6">
        <h3>Remixes</h3>
        <div class="d-flex flex-wrap justify-content-between">
          <% @remixes.each do |song| %>
            <%= render 'songs/remix_card', song: song %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%# </div> %>
