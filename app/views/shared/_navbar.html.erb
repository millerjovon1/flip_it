<div class="navbar navbar-expand-sm navbar-light navbar-lewagon flexbox fixed-top">
  <div class="container">
    <div class= "flexbox align-items-center" id='nav-logo'>
      <%= link_to 'FLIP IT!', root_path, class: 'flip-it'  %>
